<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlexibleCalendarView">

        <attr name="fcv_current_day_text_color" format="color" />
        <attr name="fcv_current_month_text_color" format="color" />
        <attr name="fcv_other_month_text_color" format="color" />
        <attr name="fcv_current_month_other_days_text_color" format="color" />
        <attr name="fcv_chosen_day_text_color" format="color" />

        <attr name="fcv_current_day_background_color" format="color" />
        <attr name="fcv_current_month_background_color" format="color" />
        <attr name="fcv_other_month_background_color" format="color" />
        <attr name="fcv_current_month_other_days_background_color" format="color" />
        <attr name="fcv_chosen_day_background_color" format="color" />

        <attr name="fcv_current_day_background_drawable" format="integer" />
        <attr name="fcv_current_month_background_drawable" format="integer" />
        <attr name="fcv_other_month_background_drawable" format="integer" />
        <attr name="fcv_current_month_other_days_background_drawable" format="integer" />
        <attr name="fcv_chosen_day_background_drawable" format="integer" />

        <attr name="fcv_calendar_day_text_size" format="dimension" />
        <attr name="fcv_calendar_title_text_size" format="dimension" />

        <attr name="fcv_next_button" format="integer" />
        <attr name="fcv_previous_button" format="integer" />
        <attr name="fcv_title_text_color" format="color" />
        <attr name="fcv_background_color" format="color" />
        <attr name="fcv_week_days_color" format="color" />


        <attr name="fcv_current_day_text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="fcv_current_month_text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="fcv_other_month_text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="fcv_current_month_other_days_text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="fcv_chosen_day_text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

    </declare-styleable>
</resources>